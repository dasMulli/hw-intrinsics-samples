<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <LangVersion>Preview</LangVersion>

    <!-- We do like to live dangerously ðŸ˜Ž -->
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>

    <!-- hack around test sdk's hacks to allow test in a console app -->
    <GenerateProgramFile>False</GenerateProgramFile>

    <!-- no warning for unused theory data - repeat hack -->
    <NoWarn>$(NoWarn);xUnit1026</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="BenchmarkDotNet" Version="0.11.5" />
    <PackageReference Include="FluentAssertions" Version="5.8.0" />
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.3.0-preview-20190808-03" />
    <PackageReference Include="xunit" Version="2.4.1" />
    <PackageReference Include="xunit.runner.visualstudio" Version="2.4.1" />
  </ItemGroup>

</Project>
